# Environment Configuration
ENVIRONMENT=development

# Database
DB_PASSWORD=farmsense_secure_password_2026
TIMESCALE_PASSWORD=timescale_secure_password_2026

# Message Queue
RABBITMQ_PASSWORD=rabbit_secure_password_2026

# API Keys & Data Sources (Open Source / No-Auth)
# We use open STAC APIs (e.g., Microsoft Planetary Computer / AWS Open Data) which do not require keys for public bands.
SENTINEL_API_KEY=not_required_for_stac
LANDSAT_API_KEY=not_required_for_stac

# Maps (Self-Hosted)
# Transitioned from Mapbox to MapLibre + Self-Hosted PostGIS Tile Server (map-service)
# No proprietary MAPBOX_TOKEN required anymore.
MAP_SERVER_URL=http://localhost:8001

# Security
SECRET_KEY=your_jwt_secret_key_min_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
GRAFANA_PASSWORD=grafana_admin_password

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Communications (Webhooks/Push)
# Replacing proprietary Twilio SMS with Open Source 'ntfy.sh' or Matrix Webhooks
NTFY_TOPIC=farmsense_critical_alerts
# TWILIO_ACCOUNT_SID=legacy_deprecated
# TWILIO_AUTH_TOKEN=legacy_deprecated
# TWILIO_PHONE_NUMBER=legacy_deprecated

# Cloud Storage (Self-Hosted)
# Replacing AWS S3 with local Zo.computer volumes or self-hosted MinIO (S3-compatible)
STORAGE_BACKEND=local
# AWS_ACCESS_KEY_ID=legacy_deprecated
# AWS_SECRET_ACCESS_KEY=legacy_deprecated
# S3_BUCKET_NAME=legacy_deprecated

# Feature Flags
ENABLE_REAL_TIME_ALERTS=true
ENABLE_DETERMINISTIC_ENGINE=true  # Replacing legacy "ML" flags to reflect audited deterministic logic
ENABLE_SATELLITE_PROCESSING=true
