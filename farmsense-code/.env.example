# Environment Configuration
ENVIRONMENT=development

# Database
DB_PASSWORD=farmsense_secure_password_2026
TIMESCALE_PASSWORD=timescale_secure_password_2026

# Message Queue
RABBITMQ_PASSWORD=rabbit_secure_password_2026

# API Keys (Register at respective services)
SENTINEL_API_KEY=your_copernicus_scihub_key
LANDSAT_API_KEY=your_usgs_earthexplorer_key
MAPBOX_TOKEN=your_mapbox_access_token

# Security
SECRET_KEY=your_jwt_secret_key_min_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
GRAFANA_PASSWORD=grafana_admin_password

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# SMS (for critical alerts - Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS (for production deployment)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-west-2
S3_BUCKET_NAME=farmsense-satellite-data

# Feature Flags
ENABLE_REAL_TIME_ALERTS=true
ENABLE_ML_PREDICTIONS=true
ENABLE_SATELLITE_PROCESSING=true
